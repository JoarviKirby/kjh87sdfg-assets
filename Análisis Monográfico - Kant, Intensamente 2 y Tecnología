    <script>
        // Utility function for Chart.js label wrapping
        function wrapLabels(labels, maxWidth) {
            return labels.map(label => {
                if (typeof label === 'string' && label.length > maxWidth) {
                    const words = label.split(' ');
                    const lines = [];
                    let currentLine = '';
                    words.forEach(word => {
                        if ((currentLine + word).length > maxWidth && currentLine.length > 0) {
                            lines.push(currentLine.trim());
                            currentLine = word + ' ';
                        } else {
                            currentLine += word + ' ';
                        }
                    });
                    lines.push(currentLine.trim());
                    return lines;
                }
                return label;
            });
        }

        // Custom tooltip title callback for Chart.js
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            if (!item) return '';
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };
        
        const commonChartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: '#2F4F4F' // Dark Slate Gray for legend text
                    }
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    },
                    backgroundColor: 'rgba(47, 79, 79, 0.9)', // Dark Slate Gray, slightly transparent
                    titleColor: '#FFFFFF',
                    bodyColor: '#FFFFFF',
                }
            },
            scales: {
                x: {
                    ticks: { 
                        color: '#2F4F4F',
                        font: { size: 10 } 
                    },
                    grid: { color: 'rgba(176, 224, 230, 0.2)' } // Powder Blue, very transparent
                },
                y: {
                    ticks: { color: '#2F4F4F' },
                    grid: { color: 'rgba(176, 224, 230, 0.5)' }
                }
            }
        };
        
        // Paleta de colores Vibrante Teal & Orange
        const colorPalette = ['#FF6701', '#008080', '#F9D923', '#0A4D68', '#B0E0E6', '#FFB38A'];
        // #FF6701 (Orange), #008080 (Teal), #F9D923 (Yellow), #0A4D68 (Dark Blue), #B0E0E6 (Powder Blue), #FFB38A (Light Orange for variations)

        // Chart for Capítulo I: Autores Comentadores
        const cap1Ctx = document.getElementById('cap1Chart').getContext('2d');
        const cap1Labels = ['González (Emociones)', 'Sánchez Madrid (Emoción Racional)', 'Borges (Juicio Moral)', 'Oroño/R. Hernández (Corporalidad)', 'Longuenesse ("Yo Pienso")', 'Sollberger (Identidad Narrativa)'];
        new Chart(cap1Ctx, {
            type: 'bar',
            data: {
                labels: wrapLabels(cap1Labels, 16),
                datasets: [{
                    label: 'Énfasis en Comentaristas de Kant',
                    data: [10, 9, 8, 9, 10, 8], // Placeholder data for emphasis
                    backgroundColor: colorPalette,
                    borderColor: colorPalette.map(color => color.replace('1)', '0.8)')),
                    borderWidth: 1
                }]
            },
            options: {
                ...commonChartOptions,
                indexAxis: 'y', // Horizontal bar chart for better label readability
                 scales: {
                    x: { ...commonChartOptions.scales.x, title: { display: true, text: 'Nivel de Énfasis (Ilustrativo)', color: '#2F4F4F'} },
                    y: { ...commonChartOptions.scales.y, ticks: { ...commonChartOptions.scales.y.ticks, font: { size: 10 } } }
                }
            }
        });

        // Chart for Capítulo II: Impacto de las TIC
        const cap2Ctx = document.getElementById('cap2ImpactoChart').getContext('2d');
        const cap2Labels = ['Identidad (Redes Sociales)', 'Ámbito Socioemocional', 'Inteligencia Emocional'];
        new Chart(cap2Ctx, {
            type: 'doughnut',
            data: {
                labels: wrapLabels(cap2Labels, 16),
                datasets: [{
                    label: 'Áreas de Impacto de las TIC en Adolescentes',
                    data: [35, 40, 25], // Placeholder percentages
                    backgroundColor: [colorPalette[0], colorPalette[1], colorPalette[2]],
                    hoverOffset: 4
                }]
            },
            options: {
                ...commonChartOptions,
                plugins: {
                    ...commonChartOptions.plugins,
                    title: {
                        display: true,
                        text: 'Distribución de Enfoques de Investigación (Ilustrativo)',
                        color: '#0A4D68',
                        font: { size: 14, weight: 'bold' }
                    }
                }
            }
        });
        
        // Chart for Capítulo III: Radar Chart
        const cap3Ctx = document.getElementById('cap3RadarChart').getContext('2d');
        const cap3Labels = ['Sensibilidad', 'Entendimiento', ['Unidad de', 'la Apercepción'], 'Autonomía', ['Imaginación /', 'Esquematismo']];
        new Chart(cap3Ctx, {
            type: 'radar',
            data: {
                labels: cap3Labels, // Already handled potential wrapping for radar
                datasets: [{
                    label: 'Desafío a Conceptos Kantianos por "Conciencia Computarizada"',
                    data: [4, 3.5, 5, 4.5, 3], // Placeholder data (scale 1-5)
                    fill: true,
                    backgroundColor: 'rgba(255, 103, 1, 0.2)', // Orange, transparent
                    borderColor: colorPalette[0], // Orange
                    pointBackgroundColor: colorPalette[0],
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: colorPalette[0]
                }]
            },
            options: {
                ...commonChartOptions,
                scales: {
                    r: {
                        angleLines: { color: 'rgba(176, 224, 230, 0.5)' },
                        grid: { color: 'rgba(176, 224, 230, 0.5)' },
                        pointLabels: { 
                            color: '#2F4F4F',
                            font: function(context) {
                                var width = context.chart.width;
                                var size = Math.round(width / 32);
                                size = Math.min(size, 12); // Max size
                                return {
                                    size: size,
                                     weight: '600'
                                };
                            }
                        },
                        ticks: {
                            backdropColor: 'rgba(255, 255, 255, 0.75)',
                            color: '#2F4F4F',
                            stepSize: 1,
                            font: { size: 10 }
                        },
                        min: 0,
                        max: 5
                    }
                },
                plugins: {
                    ...commonChartOptions.plugins,
                    title: {
                        display: true,
                        text: 'Nivel de Desafío Percibido (Escala 1-5)',
                        color: '#0A4D68',
                        font: { size: 14, weight: 'bold' }
                    }
                }
            }
        });

        // Smooth scrolling for nav links
        document.querySelectorAll('nav a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    // Calculate position considering sticky nav height
                    const navHeight = document.querySelector('nav').offsetHeight;
                    const elementPosition = targetElement.getBoundingClientRect().top;
                    const offsetPosition = elementPosition + window.pageYOffset - navHeight - 20; // Extra 20px padding

                    window.scrollTo({
                        top: offsetPosition,
                        behavior: "smooth"
                    });
                }
            });
        });

    </script>
</body>
</html>
